{
  "name": "template-node-typescript-express",
  "version": "1.0.0",
  "description": "Starter template for use typescript and express in node",
  "main": "./dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/main.js",
    "build": "tsc -p ./tsconfig.json",
    "dev": "tsx watch --include \"./src/**/*\" --clear-screen=false ./src/main.ts",
    "format": "prettier --write --cache \"./src\"",
    "postinstall": "simple-git-hooks",
    "check": "tsc --noEmit -p ./tsconfig.json"
  },
  "keywords": [
    "node",
    "typescript",
    "template",
    "express",
    "nodejs",
    "sqlite"
  ],
  "author": "LiasCode",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "compression": "^1.8.1",
    "consola": "^3.4.2",
    "cookie-parser": "1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "1.10.0",
    "uuid": "^9.0.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.6",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.10",
    "@types/uuid": "^9.0.8",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}
